        <javaModelGenerator targetPackage="com.xxx.mybatis.dao" targetProject="E:\HomeWork\2018-homework\02-mybatis-sourcecode\99-mybatis-generator\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
