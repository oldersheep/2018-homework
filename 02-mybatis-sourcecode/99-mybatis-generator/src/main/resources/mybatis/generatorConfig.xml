        <sqlMapGenerator targetPackage="xml" targetProject="E:\HomeWork\2018-homework\02-mybatis-sourcecode\99-mybatis-generator\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.xxx.mybatis.dao" targetProject="E:\HomeWork\2018-homework\02-mybatis-sourcecode\99-mybatis-generator\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="mybatis" tableName="test" domainObjectName="Test">
            <property name="useActualColumnNames" value="false"/>
